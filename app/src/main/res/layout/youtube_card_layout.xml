<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:gravity="center"
    card_view:cardBackgroundColor="#AA000000"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NYC MUSIC VIDEOS"
            android:textSize="20dp"
            android:textColor="#FFF899"
            android:layout_centerHorizontal="true"
            android:id="@+id/city_video_TextView"/>

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_player"
            android:layout_below="@id/city_video_TextView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <Button
            android:id="@+id/play_button"
            android:layout_centerInParent="true"
            android:text="Play Video"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/youtube_player"
            android:gravity="center" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
