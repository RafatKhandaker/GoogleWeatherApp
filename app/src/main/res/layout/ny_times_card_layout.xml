<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:id="@+id/ny_times_card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#AA000000"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    card_view:contentPaddingTop="40dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_gravity="center"
        android:padding="16dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF899"
            android:id="@+id/times_title_textview"
            android:text="NEW YORK TIMES TOP STORY"
            android:textSize="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/times_imageview"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/times_title_textview"
            android:layout_marginRight="16dp"
            />


        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/times_detail_textview"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/times_imageview"
            android:layout_below="@id/times_title_textview"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/times_story_textview"
            android:textColor="#AAAAAA"
            android:textSize="20dp"
            android:layout_below="@+id/times_detail_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/times_imageview"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>