<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:id="@+id/ny_times_card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#AA000000"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    card_view:contentPaddingTop="40dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF899"
            android:id="@+id/times_title_textview"
            android:text="NEW YORK TIMES TOP STORY"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/times_imageview"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/times_title_textview"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/times_detail_textview"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/times_imageview"
            android:layout_below="@id/times_title_textview"
            />

        <TextView
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:id="@+id/times_story_textview"
            android:textColor="#AAAAAA"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:gravity="top"
            android:layout_below="@+id/times_detail_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/times_imageview"
            android:layout_alignParentBottom="true" />

        </RelativeLayout>

</android.support.v7.widget.CardView>