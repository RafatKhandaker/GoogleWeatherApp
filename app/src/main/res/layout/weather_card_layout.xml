<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="210dp"
    android:layout_width="170dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView
    android:layout_width="170dp"
    android:layout_height="210dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/google_card_view"
    card_view:cardBackgroundColor="#AA000000"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    card_view:contentPaddingTop="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:id="@+id/date_text_view" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/na"
        android:id="@+id/weather_image_icon"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/current_weather_textview"
        android:layout_below="@+id/weather_image_icon"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/current_wind_speed"
        android:layout_below="@+id/current_weather_textview"
        android:textColor="#FFFFFF" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:id="@+id/current_humidity"
        android:layout_below="@+id/current_wind_speed"
        android:textColor="#FFFFFF" />


</android.support.v7.widget.CardView>
</RelativeLayout>